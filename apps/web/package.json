{
	"name": "web",
	"version": "0.0.1",
	"author": "Wohee",
	"description": "Sveltekit frontend for the BPSR Timer Panel monorepo",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bun run --bun vite build",
		"check": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "wrangler deploy",
		"dev": "bun run --bun svelte-kit sync && bun run --bun vite dev",
		"lint": "eslint .",
		"preview": "vite preview",
		"test": "bun run test:integration && bun run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"dependencies": {
		"mode-watcher": "^1.1.0",
		"pocketbase": "^0.26.3",
		"simple-icons": "^15.20.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.553.0",
		"@playwright/test": "^1.56.1",
		"@repo/eslint-config": "workspace:*",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"bits-ui": "^2.14.3",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.6",
		"svelte-check": "^4.3.4",
		"svelte-sonner": "^1.0.6",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.17",
		"tslib": "^2.8.1",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^7.2.2",
		"vitest": "^4.0.8"
	}
}
