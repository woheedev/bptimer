{
	"name": "web",
	"version": "0.0.1",
	"author": "Wohee",
	"description": "Sveltekit frontend for the BPSR Timer Panel monorepo",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "bun run --bun vite build",
		"check": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun run --bun svelte-kit sync && bun run --bun svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "wrangler deploy",
		"dev": "bun run --bun svelte-kit sync && bun run --bun vite dev",
		"lint": "eslint .",
		"preview": "vite preview",
		"shadcn-add": "bunx shadcn-svelte@latest add",
		"test": "playwright test"
	},
	"dependencies": {
		"mode-watcher": "^1.1.0",
		"pako": "^2.1.0",
		"pocketbase": "^0.26.8",
		"simple-icons": "^16.9.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@internationalized/date": "^3.11.0",
		"@lucide/svelte": "^0.575.0",
		"@playwright/test": "^1.58.2",
		"@repo/eslint-config": "workspace:*",
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/adapter-cloudflare": "^7.2.8",
		"@sveltejs/kit": "^2.53.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.2.1",
		"@types/pako": "^2.0.4",
		"bits-ui": "^2.16.2",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^10.0.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.53.3",
		"svelte-check": "^4.4.3",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.5.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.2.1",
		"tslib": "^2.8.1",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^7.3.1"
	}
}
