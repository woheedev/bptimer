{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
