{
  "name": "bptimer",
  "version": "1.0.1",
  "author": "Wohee",
  "description": "A timer panel to keep track of mobs for Blue Protocol SR",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "cleanup": "bun ./scripts/cleanup.mjs",
    "format": "prettier --write . && cd apps/pocketbase && go fmt ./...",
    "format:check": "prettier --check . && bun ./scripts/check-go-format.js",
    "lint": "turbo run lint",
    "uiadd": "cd apps/web && bunx shadcn-svelte@latest add"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.0"
  },
  "packageManager": "bun@1.3.2"
}
