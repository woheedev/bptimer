{
  "name": "bptimer",
  "version": "1.4.2",
  "author": "Wohee",
  "description": "A timer panel to keep track of mobs for Blue Protocol SR",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "cleanup": "bun ./scripts/cleanup.mjs",
    "format": "prettier --write . && turbo run format",
    "format:check": "prettier --check . && turbo run format:check",
    "lint": "turbo run lint",
    "upgrade": "ncu -w -u && bun install && turbo run upgrade"
  },
  "devDependencies": {
    "npm-check-updates": "^19.2.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.0"
  },
  "packageManager": "bun@1.3.5"
}
